<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h2>
        <%= link_to "Media Ranker", root_path %> |
        <%= "Ranking the Best of Everything"%>
      </h2>

      <nav>
      <ul>
        <li><%= link_to "View top media", root_path %></li>        
        <li><%= link_to "View All", works_path %></li> 
        <li><%= link_to "Add a new work", new_work_path %></li> 
        <li><%= link_to "View all users", root_path %></li> 
        <% if session[:user_id] %>
          <li><%= link_to "Logout", logout_path, method: :post %></li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
      </nav>
    </header>

    <main>
      <section class="flash-msg__section">
        <% flash.each do |name, message| %>
          <div class="<%= name %>">
            <%= message %>
          </div>
        <% end %>
      </section>
      <%= yield %>
    </main>
  </body>

</html>
