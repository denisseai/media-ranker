<h3>All Works</h3>
<section>
  <h3>Albums</h3>

	<table>
		<tr>
			<th>Title</th>
			<th>Creator</th>
			<th>Publication Year</th>
			<th>Description</th>
		</tr>

			<% @works.each do |album| %>
				<tr>
					<td>
						<%= album.title %>
					</td>
					<td>
						<%= album.creator %>
					</td>
					<td>
						<%= album.publication_year %>
					</td>
					<td>
						<%= album.description %>
					</td>
				</tr>
			<% end %>
	</table>
</section>

